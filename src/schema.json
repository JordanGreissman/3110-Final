{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "game": {
      "type": "object",
      "properties": {
        "turns": {
          "type": "integer"
        },
        "AI": {
          "type": "integer"
        }
      },
      "required": [
        "turns",
        "AI"
      ]
    },
    "techtree": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tech": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "researchreq": {
            "type": "integer"
          },
          "prereq": {
            "type": "array",
            "items": {}
          },
          "unlocks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "entity": {
                  "type": "array",
                  "items": {}
                },
                "tech": {
                  "type": "array",
                  "items": {}
                },
                "hub": {
                  "type": "array",
                  "items": {}
                },
                "upgrades": {
                  "type": "array",
                  "items": {}
                }
              },
              "required": [
                "entity",
                "tech",
                "hub",
                "upgrades"
              ]
            }
          }
        },
        "required": [
          "tech",
          "desc",
          "researchreq",
          "prereq",
          "unlocks"
        ]
      }
    },
    "hubs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "built by": {
            "type": "string"
          },
          "generates": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "resource": {
                  "type": "string"
                },
                "amount": {
                  "type": "integer"
                }
              },
              "required": [
                "resource",
                "amount"
              ]
            }
          },
          "units": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "required": [
                "name"
              ]
            }
          },
          "upgrades to": {
            "type": "string"
          },
          "health": {
            "type": "integer"
          }
        },
        "required": [
          "name",
          "desc",
          "built by",
          "generates",
          "units",
          "upgrades to",
          "health"
        ]
      }
    },
    "civilizations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "desc"
        ]
      }
    },
    "units": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "can attack": {
            "type": "boolean"
          },
          "builds": {
            "type": "array",
            "items": {}
          },
          "attack": {
            "type": "integer"
          },
          "defense": {
            "type": "integer"
          },
          "actions": {
            "type": "integer"
          },
          "requires": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "desc",
          "can attack",
          "builds",
          "attack",
          "defense",
          "actions",
          "requires"
        ]
      }
    }
  },
  "required": [
    "game",
    "techtree",
    "hubs",
    "civilizations",
    "units"
  ]
}